@model PaperProcessor.Models.WorkOrder

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WorkOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkOrderNo" class="control-label"></label>
                <input asp-for="WorkOrderNo" class="form-control" />
                <span asp-validation-for="WorkOrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductCartonId" class="control-label"></label>
                <select asp-for="ProductCartonId" class ="form-control" asp-items="ViewBag.ProductCartonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOrdered" class="control-label"></label>
                <input asp-for="QuantityOrdered" class="form-control" />
                <span asp-validation-for="QuantityOrdered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitSellPrice" class="control-label"></label>
                <input asp-for="UnitSellPrice" class="form-control" />
                <span asp-validation-for="UnitSellPrice" class="text-danger"></span>

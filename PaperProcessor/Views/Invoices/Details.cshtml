@model PaperProcessor.Models.Invoice
@{
    ViewData["Title"] = "Invoice Details";
}

<h2>Invoice @Model.InvoiceNo</h2>

<div class="mb-3">
    <div><strong>Status:</strong> @Model.Status</div>
    <div><strong>Issue Date:</strong> @Model.IssueDate.ToShortDateString()</div>
    <div><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</div>
</div>

<div class="mb-3">
    <h5>Customer</h5>
    <div>@Model.WorkOrder?.Customer?.Name</div>
    <div>@Model.WorkOrder?.Customer?.Email</div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Description</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model.Lines)
        {
            <tr>
                <td>@l.Description</td>
                <td>@l.Qty</td>
                <td>@l.UnitPrice</td>
                <td>@l.LineTotal</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <div><strong>Subtotal:</strong> @Model.Subtotal</div>
    <div><strong>Discount:</strong> @Model.DiscountAmount</div>
    <div><strong>Total (No GST):</strong> <span class="fs-5">@Model.Total</span></div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Pdf" asp-route-id="@Model.InvoiceId">Download PDF</a>
    <a class="btn btn-secondary" asp-controller="WorkOrders" asp-action="Index">Back</a>
</div>

@model IEnumerable<PaperProcessor.Models.Material>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerUnit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerUnit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaterialId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaterialId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaterialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
